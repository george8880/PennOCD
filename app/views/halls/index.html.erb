<h1>Listing halls</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Score</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @halls.each do |hall| %>
  <tr>
    <td><%= hall.name %></td>
    <td><%= hall.score %></td>
    <td><%= link_to 'Show', hall %></td>
    <td><%= link_to 'Edit', edit_hall_path(hall) %></td>
    <td><%= link_to 'Destroy', hall, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

